{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "schematics": {
    "@nestjs/schematics:module": {
      "path": "src/module",
      "flat": false
    },
    "@nestjs/schematics:controller": {
      "path": "src/module",
      "flat": false
    },
    "@nestjs/schematics:service": {
      "path": "src/module",
      "flat": false
    },
    "@nestjs/schematics:resource": {
      "path": "src/module",
      "flat": false,
      "spec": false
    }
  },
  "generateOptions": {
    "flat": false,
    "spec": false
  }
}