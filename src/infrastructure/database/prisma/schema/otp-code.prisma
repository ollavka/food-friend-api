model OtpCode {
  id String @id @default(uuid())

  type      OtpCodeType
  email     String
  codeHash  String      @map("code_hash")
  expiresAt DateTime    @map("expires_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("update_at")

  @@index([email, type])
  @@map("otp_codes")
}

enum OtpCodeType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  PASSWORD_CHANGE
}
